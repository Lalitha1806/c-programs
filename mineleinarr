#include <stdio.h>
int main()
{
    int a[10],i,n,min;
    printf("enter the size:");
    scanf("%d",&n);
    printf("enter the elements:\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    min=a[0];
    for(i=0;i<n;i++)
    {
       if(a[i]<min)
       {
           min=a[i];
       }
    }
    printf("the minimum element in the given array is: %d",min);
    return 0;
}
